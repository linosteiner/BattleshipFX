<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane maxHeight="Infinity" maxWidth="Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.Controller">
   <top>
       <MenuBar fx:id="close" BorderPane.alignment="CENTER">
           <Menu mnemonicParsing="false" text="Game">
               <MenuItem mnemonicParsing="false" onAction="#newGame" text="New" />
               <MenuItem mnemonicParsing="false" onAction="#close" text="Close" />
           </Menu>
       </MenuBar>
   </top>
   <center>
       <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
           <VBox HBox.hgrow="ALWAYS">
               <padding>
                   <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="My Ships" />
               <Pane fx:id="field1" prefHeight="400.0" prefWidth="200.0" />
               <Pane fx:id="legend1" prefHeight="200.0" prefWidth="200.0" />
           </VBox>
           <VBox HBox.hgrow="ALWAYS">
               <padding>
                   <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Enemy Ships" />
               <Pane fx:id="field2" prefHeight="400.0" prefWidth="200.0" />
               <Pane fx:id="legend2" prefHeight="200.0" prefWidth="200.0" />
           </VBox>
       </HBox>
   </center>
</BorderPane>
